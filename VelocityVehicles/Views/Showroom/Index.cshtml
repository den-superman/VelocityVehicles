@model IEnumerable<Showroom>
@{
    ViewData["Title"] = "Providers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Stores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShowroomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowroomDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowroomName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowroomDescription)
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

